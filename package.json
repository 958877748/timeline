{
  "name": "timeline-tool",
  "version": "1.0.0",
  "description": "A pure data-driven timeline tool similar to Unity Timeline",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:react": "vite build examples",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "lint:fix": "eslint src/**/*.ts src/**/*.tsx --fix",
    "clean": "rimraf dist coverage",
    "dev": "vite",
    "dev:ts": "tsc --watch",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "timeline",
    "animation",
    "video-editing",
    "data-driven",
    "typescript",
    "pure-functions"
  ],
  "author": "Timeline Tool Team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^8.49.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9"
  },
  "dependencies": {
    "@tweakpane/plugin-essentials": "^0.2.1",
    "tweakpane": "^4.0.5"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/timeline-tool.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/timeline-tool/issues"
  },
  "homepage": "https://github.com/your-username/timeline-tool#readme"
}
